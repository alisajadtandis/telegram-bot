                <input type="tel" id="phoneNumber" placeholder="شماره تلفن (مثال: 09301234567)" required>
                <button id="submitPhoneNumber">ارسال شماره و شروع چت</button>
            </div>
            
            <div class="chat-messages" id="chatMessages" style="display: none;">
                <!-- پیام‌ها اینجا نمایش داده می‌شوند -->
            </div>
            
            <div class="chat-input-container" id="chatInputContainer" style="display: none;">
                <div class="emoji-picker" id="emojiPicker">
                    <!-- ایموجی‌ها اینجا نمایش داده می‌شوند -->
                </div>
                
                <!-- پیش‌نمایش عکس -->
                <img id="imagePreview" class="image-preview" src="https://ibb.co/tT5rgGGG" alt="پیش‌نمایش عکس">
                
                <div class="chat-toolbar">
                    <button id="attachFileBtn" title="ارسال فایل">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button id="sendImageBtn" title="ارسال عکس">
                        <i class="fas fa-image"></i>
                    </button>
                    <button id="sendVoiceBtn" title="ضبط صدا">
                        <i class="fas fa-microphone"></i>
                    </button>
                    <button id="sendEmojiBtn" title="ارسال ایموجی">
                        <i class="fas fa-smile"></i>
                </div>
                <div class="chat-input-row">
                    <div class="chat-input-wrapper">
                        <textarea id="messageInput" class="chat-input" placeholder="پیام خود را بنویسید..." rows="1"></textarea>
                    </div>
                    <button id="sendMessage" class="send-button">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
            
            <!-- مودال تماس -->
            <div class="call-modal" id="callModal">
                <h3 id="callTitle">دریافت تماس</h3>
                <p id="callerInfo">پشتیبانی لیسه خاتم النبیین</p>
                <div id="videoPreview" class="video-call-preview" style="display: none;">
                    <i class="fas fa-user fa-3x"></i>
                </div>
                <div class="call-actions">
                    <button class="call-btn call-accept" id="acceptCall">
                        <i class="fas fa-phone"></i>
                    </button>
                    <button class="call-btn call-reject" id="rejectCall">
                        <i class="fas fa-phone-slash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- دکمه بازگشت به بالا -->
    <a href="#" class="back-to-top" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </a>

    <!-- فوتر -->
    <footer id="contact">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>درباره ما</h3>
                    <p>لیسه عالی خاتم النبیین با هدف ارائه آموزش با کیفیت و مبتنی بر ارزش های اسلامی تأسیس شده است.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-telegram"></i></a>
                    </div>
                </div>
                <div class="footer-column">
                    <h3>لینک های سریع</h3>
                    <ul>
                        <li><a href="#home"><i class="fas fa-home"></i> صفحه اصلی</a></li>
                        <li><a href="#about"><i class="fas fa-info-circle"></i> درباره ما</a></li>
                        <li><a href="#features"><i class="fas fa-cogs"></i> امکانات</a></li>
                        <li><a href="#gallery"><i class="fas fa-images"></i> گالری</a></li>
                        <li><a href="#attendance"><i class="fas fa-clipboard-check"></i> حضور و غیاب</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>تماس با ما</h3>
                    <ul>
                        <li><i class="fas fa-map-marker-alt"></i> آدرس: کابل، افغانستان، حوزه ششم، جوار لوی صارنوالی</li>
                        <li><i class="fas fa-phone"></i> تلفن: ۰۷۸۰-۱۲۳-۴۵۶۷</li>
                        <li><i class="fas fa-envelope"></i> ایمیل: info@khatam-school.edu.af</li>
                        <li><i class="fas fa-clock"></i> ساعات کاری: ۸:۰۰ صبح تا ۴:۰۰ عصر</li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p>کلیه حقوق این وبسایت متعلق به لیسه عالی خاتم النبیین می باشد. © ۱۴۰۳</p>
            </div>
        </div>
    </footer>

    <script>
        // اسکرول نرم برای لینک‌های داخلی
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
                
                // بستن منوی موبایل
                if (window.innerWidth <= 768) {
                    document.getElementById('mainNav').classList.remove('active');
                    document.getElementById('mobileMenu').classList.remove('active');
                }
            });
        });

        // سیستم حضور و غیاب
        const attendanceForm = document.getElementById('attendanceForm');
        const attendanceResult = document.getElementById('attendanceResult');
        const studentInfo = document.getElementById('studentInfo');
        const attendanceTableBody = document.getElementById('attendanceTableBody');
        
        // داده‌های نمونه برای حضور و غیاب
        const sampleAttendanceData = {
            '14031001': {
                name: 'احمد رحیمی',
                fatherName: 'محمد',
                class: 'دهم 2',
                attendance: [
                    { date: '1403/07/01', day: 'شنبه', status: 'present' },
                    { date: '1403/07/02', day: 'یکشنبه', status: 'present' },
                    { date: '1403/07/03', day: 'دوشنبه', status: 'late' },
                    { date: '1403/07/04', day: 'سه‌شنبه', status: 'absent' },
                    { date: '1403/07/05', day: 'چهارشنبه', status: 'present' }
                ]
            },
            '14031002': {
                name: 'فاطمه احمدی',
                fatherName: 'علی',
                class: 'نهم 1',
                attendance: [
                    { date: '1403/07/01', day: 'شنبه', status: 'present' },
                    { date: '1403/07/02', day: 'یکشنبه', status: 'present' },
                    { date: '1403/07/03', day: 'دوشنبه', status: 'present' },
                    { date: '1403/07/04', day: 'سه‌شنبه', status: 'present' },
                    { date: '1403/07/05', day: 'چهارشنبه', status: 'present' }
                ]
            }
        };
        
        attendanceForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const studentId = document.getElementById('studentId').value;
            const studentName = document.getElementById('studentName').value;
            const fatherName = document.getElementById('fatherName').value;
            const studentClass = document.getElementById('studentClass').value;
            
            // در حالت واقعی، اینجا اطلاعات به سرور ارسال می‌شود
            let studentData = sampleAttendanceData[studentId];
            
            if (!studentData) {
                studentData = {
                    name: studentName,
                    fatherName: fatherName,
                    class: studentClass,
                    attendance: [
                        { date: '1403/07/01', day: 'شنبه', status: 'present' },
                        { date: '1403/07/02', day: 'یکشنبه', status: 'present' },
                        { date: '1403/07/03', day: 'دوشنبه', status: 'present' },
                        { date: '1403/07/04', day: 'سه‌شنبه', status: 'late' },
                        { date: '1403/07/05', day: 'چهارشنبه', status: 'present' }
                    ]
                };
            }
            
            // نمایش اطلاعات دانش‌آموز
            studentInfo.textContent = `دانش‌آموز: ${studentData.name} - پدر: ${studentData.fatherName} - صنف: ${studentData.class}`;
            
            // پاک کردن جدول قبلی
            attendanceTableBody.innerHTML = '';
            
            // پر کردن جدول با داده‌های حضور و غیاب
            studentData.attendance.forEach(record => {
                const row = document.createElement('tr');
                
                const statusClass = record.status === 'present' ? 'present' : 
                                  record.status === 'absent' ? 'absent' : 'late';
                
                const statusText = record.status === 'present' ? 'حاضر' : 
                                 record.status === 'absent' ? 'غایب' : 'تأخیر';
                
                row.innerHTML = `
                    <td>${record.date}</td>
                    <td>${record.day}</td>
                    <td class="${statusClass}">${statusText}</td>
                `;
                
                attendanceTableBody.appendChild(row);
            });
            
            // نمایش نتیجه
            attendanceResult.style.display = 'block';
            attendanceResult.scrollIntoView({ behavior: 'smooth' });
        });

        // سیستم چت آنلاین پیشرفته
        const chatButton = document.getElementById('chatButton');
        const chatWindow = document.getElementById('chatWindow');
        const closeChat = document.getElementById('closeChat');
        const sendMessage = document.getElementById('sendMessage');
        const sendMessageIcon = document.getElementById('sendMessageIcon');
        const messageInput = document.getElementById('messageInput');
        const chatMessages = document.getElementById('chatMessages');
        const phoneInputContainer = document.getElementById('phoneInputContainer');
        const chatInputContainer = document.getElementById('chatInputContainer');
        const phoneNumberInput = document.getElementById('phoneNumber');
        const submitPhoneNumber = document.getElementById('submitPhoneNumber');
        const emojiPicker = document.getElementById('emojiPicker');
        const imagePreview = document.getElementById('imagePreview');
        
        // دکمه‌های چت
        const attachFileBtn = document.getElementById('attachFileBtn');
        const sendImageBtn = document.getElementById('sendImageBtn');
        const sendVoiceBtn = document.getElementById('sendVoiceBtn');
        const sendEmojiBtn = document.getElementById('sendEmojiBtn');
        const sendStickerBtn = document.getElementById('sendStickerBtn');
        const sendGifBtn = document.getElementById('sendGifBtn');
        const voiceCallBtn = document.getElementById('voiceCallBtn');
        const videoCallBtn = document.getElementById('videoCallBtn');
        
        // مودال تماس
        const callModal = document.getElementById('callModal');
        const callTitle = document.getElementById('callTitle');
        const callerInfo = document.getElementById('callerInfo');
        const videoPreview = document.getElementById('videoPreview');
        const acceptCall = document.getElementById('acceptCall');
        const rejectCall = document.getElementById('rejectCall');
        
        let userPhoneNumber = localStorage.getItem('userPhoneNumber') || '';
        let isRecording = false;
        let mediaRecorder;
        let audioChunks = [];
        let selectedImageFile = null;
        
        // ایموجی‌های قابل استفاده
        const emojis = ['😀', '😃', '😄', '😁', '😆', '😅', '😂', '🤣', '😊', '😇', '🙂', '🙃', '😉', '😌', '😍', '🥰', '😘', '😗', '😙', '😚', '😋', '😛', '😝', '😜', '🤪', '🤨', '🧐', '🤓', '😎', '🤩', '🥳', '😏', '😒', '😞', '😔', '😟', '😕', '🙁', '☹️', '😣', '😖', '😫', '😩', '🥺', '😢', '😭', '😤', '😠', '😡', '🤬', '🤯', '😳', '🥵', '🥶', '😱', '😨', '😰', '😥', '😓', '🤗', '🤔', '🤭', '🤫', '🤥', '😶', '😐', '😑', '😬', '🙄', '😯', '😦', '😧', '😮', '😲', '🥱', '😴', '🤤', '😪', '😵', '🤐', '🥴', '🤢', '🤮', '🤧', '😷', '🤒', '🤕', '🤑', '🤠', '😈', '👿', '👹', '👺', '🤡', '💩', '👻', '💀', '☠️', '👽', '👾', '🤖', '🎃', '😺', '😸', '😹', '😻', '😼', '😽', '🙀', '😿', '😾'];
        
        // پر کردن ایموجی پیکر
        emojis.forEach(emoji => {
            const emojiItem = document.createElement('div');
            emojiItem.className = 'emoji-item';
            emojiItem.textContent = emoji;
            emojiItem.addEventListener('click', () => {
                messageInput.value += emoji;
                emojiPicker.classList.remove('active');
                adjustTextareaHeight();
            });
            emojiPicker.appendChild(emojiItem);
        });
        
        // تنظیم ارتفاع textarea بر اساس محتوا
        function adjustTextareaHeight() {
            messageInput.style.height = 'auto';
            messageInput.style.height = (messageInput.scrollHeight) + 'px';
        }
        
        messageInput.addEventListener('input', adjustTextareaHeight);
        
        // بررسی اینکه آیا کاربر قبلاً شماره خود را وارد کرده است
        if (userPhoneNumber) {
            phoneInputContainer.style.display = 'none';
            chatMessages.style.display = 'flex';
            chatInputContainer.style.display = 'flex';
            addMessage('received', 'سلام! به پشتیبانی آنلاین لیسه عالی خاتم النبیین خوش آمدید. چگونه می‌توانم کمک‌تان کنم؟');
        }
        
        // منوی موبایل
        const mobileMenu = document.getElementById('mobileMenu');
        const mainNav = document.getElementById('mainNav');
        
        mobileMenu.addEventListener('click', () => {
            mobileMenu.classList.toggle('active');
            mainNav.classList.toggle('active');
        });
        
        chatButton.addEventListener('click', () => {
            chatWindow.style.display = 'flex';
            
            // اگر کاربر قبلاً شماره خود را وارد کرده است، مستقیماً به چت برود
            if (userPhoneNumber) {
                phoneInputContainer.style.display = 'none';
                chatMessages.style.display = 'flex';
                chatInputContainer.style.display = 'flex';
            } else {
                phoneInputContainer.style.display = 'block';
                chatMessages.style.display = 'none';
                chatInputContainer.style.display = 'none';
            }
            
            callModal.style.display = 'none';
            emojiPicker.classList.remove('active');
        });

        closeChat.addEventListener('click', () => {
            chatWindow.style.display = 'none';
            emojiPicker.classList.remove('active');
        });

        submitPhoneNumber.addEventListener('click', () => {
            const phone = phoneNumberInput.value.trim();
            if (phone) {
                userPhoneNumber = phone;
                
                // ذخیره شماره در localStorage
                localStorage.setItem('userPhoneNumber', phone);
                
                // نمایش بخش چت
                phoneInputContainer.style.display = 'none';
                chatMessages.style.display = 'flex';
                chatInputContainer.style.display = 'flex';
                
                // افزودن پیام خوش‌آمدگویی
                addMessage('received', 'سلام! به پشتیبانی آنلاین لیسه عالی خاتم النبیین خوش آمدید. چگونه می‌توانم کمک‌تان کنم؟');
            } else {
                alert('لطفاً شماره تلفن خود را وارد کنید.');
            }
        });

        // ارسال پیام با دکمه ارسال
        sendMessage.addEventListener('click', sendChatMessage);
        
        // ارسال پیام با آیکون ارسال
        sendMessageIcon.addEventListener('click', sendChatMessage);
        
        // ارسال پیام با کلید Enter (بدون Shift)
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendChatMessage();
            }
        });

        // نمایش/پنهان کردن ایموجی پیکر
        sendEmojiBtn.addEventListener('click', () => {
            emojiPicker.classList.toggle('active');
        });

        // ارسال عکس
        sendImageBtn.addEventListener('click', () => {
            const fileInput = document.createElement('input');
            fileInput.type = 'file';
            fileInput.accept = 'image/*';
            fileInput.onchange = (e) => {
                const file = e.target.files[0];
                if (file) {
                    selectedImageFile = file;
                    
                    // نمایش پیش‌نمایش عکس
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        imagePreview.src = e.target.result;
                        imagePreview.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                }
            };
            fileInput.click();
        });

        // ارسال فایل
        attachFileBtn.addEventListener('click', () => {
            const fileInput = document.createElement('input');
            fileInput.type = 'file';
            fileInput.onchange = (e) => {
                const file = e.target.files[0];
                if (file) {
                    // شبیه‌سازی ارسال فایل
                    addMessage('sent', '', 'file', file.name);
                    saveMessage(userPhoneNumber, `فایل: ${file.name}`, 'user', 'file');
                    
                    // پاسخ ربات
                    setTimeout(() => {
                        addMessage('received', 'فایل شما دریافت شد. با تشکر.');
                        saveMessage(userPhoneNumber, 'فایل شما دریافت شد. با تشکر.', 'bot');
                    }, 1000);
                }
            };
            fileInput.click();
        });

        // ضبط صدا
        sendVoiceBtn.addEventListener('click', toggleVoiceRecording);

        // ارسال استیکر
        sendStickerBtn.addEventListener('click', () => {
            addMessage('sent', '', 'sticker', 'استیکر ارسال شده');
            saveMessage(userPhoneNumber, 'استیکر ارسال شده', 'user', 'sticker');
            
            setTimeout(() => {
                addMessage('received', 'استیکر جالبی است!');
                saveMessage(userPhoneNumber, 'استیکر جالبی است!', 'bot');
            }, 1000);
        });

        // ارسال GIF
        sendGifBtn.addEventListener('click', () => {
            addMessage('sent', '', 'gif', 'GIF ارسال شده');
            saveMessage(userPhoneNumber, 'GIF ارسال شده', 'user', 'gif');
            
            setTimeout(() => {
                addMessage('received', 'GIF جالبی است!');
                saveMessage(userPhoneNumber, 'GIF جالبی است!', 'bot');
            }, 1000);
        });

        // تماس صوتی
        voiceCallBtn.addEventListener('click', () => {
            startCall('صوتی');
        });

        // تماس تصویری
        videoCallBtn.addEventListener('click', () => {
            startCall('تصویری');
        });

        // پذیرش تماس
        acceptCall.addEventListener('click', () => {
            callModal.style.display = 'none';
            addMessage('sent', '', 'call', 'تماس پاسخ داده شد');
            alert('تماس برقرار شد (شبیه‌سازی)');
        });

        // رد تماس
        rejectCall.addEventListener('click', () => {
            callModal.style.display = 'none';
            addMessage('sent', '', 'call', 'تماس رد شد');
        });

        function sendChatMessage() {
            const message = messageInput.value.trim();
            
            // اگر عکسی انتخاب شده است، آن را ارسال کن
            if (selectedImageFile) {
                addMessage('sent', '', 'image', 'عکس ارسال شده');
                saveMessage(userPhoneNumber, 'عکس ارسال شده', 'user', 'image');
                
                // پاک کردن پیش‌نمایش عکس
                imagePreview.style.display = 'none';
                selectedImageFile = null;
                
                // پاسخ ربات
                setTimeout(() => {
                    addMessage('received', 'عکس شما دریافت شد. ممنون از اشتراک‌گذاری.');
                    saveMessage(userPhoneNumber, 'عکس شما دریافت شد. ممنون از اشتراک‌گذاری.', 'bot');
                }, 1000);
            }
            
            // اگر پیام متنی وجود دارد، آن را ارسال کن
            if (message && userPhoneNumber) {
                // افزودن پیام کاربر
                addMessage('sent', message);
                
                // ذخیره پیام
                saveMessage(userPhoneNumber, message, 'user');
                
                // پاک کردن فیلد ورودی
                messageInput.value = '';
                adjustTextareaHeight();
                
                // شبیه‌سازی پاسخ ربات پس از تاخیر
                setTimeout(() => {
                    const botResponse = getBotResponse(message);
                    addMessage('received', botResponse);
                    saveMessage(userPhoneNumber, botResponse, 'bot');
                }, 1000);
            }
        }

        function addMessage(type, text, fileType = null, fileName = null) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            
            const time = new Date().toLocaleTimeString('fa-IR', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
            
            let content = text;
            if (fileType === 'image') {
                content = `
                    <div class="message-file">
                        <i class="fas fa-image"></i>
                        <span>${fileName}</span>
                    </div>
                `;
            } else if (fileType === 'file') {
                content = `
                    <div class="message-file">
                        <i class="fas fa-paperclip"></i>
                        <span>${fileName}</span>
                    </div>
                `;
            } else if (fileType === 'voice') {
                content = `
                    <div class="voice-message">
                        <button class="voice-play-btn">
                            <i class="fas fa-play"></i>
                        </button>
                        <div class="voice-duration">0:05</div>
                    </div>
                `;
            } else if (fileType === 'call') {
                content = `
                    <div class="message-file">
                        <i class="fas fa-phone"></i>
                        <span>${fileName}</span>
                    </div>
                `;
            } else if (fileType === 'sticker') {
                content = `
                    <div class="message-file">
                        <i class="fas fa-sticky-note"></i>
                        <span>${fileName}</span>
                    </div>
                `;
            } else if (fileType === 'gif') {
                content = `
                    <div class="message-file">
                        <i class="fas fa-film"></i>
                        <span>${fileName}</span>
                    </div>
                `;
            }
            
            messageDiv.innerHTML = `
                <div class="message-actions">
                    <button class="message-action delete-message" title="حذف پیام">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <div>${content}</div>
                <div class="message-time">${time}</div>
            `;
            
            // اضافه کردن event listener برای حذف پیام
            const deleteBtn = messageDiv.querySelector('.delete-message');
            deleteBtn.addEventListener('click', function() {
                messageDiv.remove();
            });
            
            // اضافه کردن event listener برای پخش صوت
            if (fileType === 'voice') {
                const playBtn = messageDiv.querySelector('.voice-play-btn');
                playBtn.addEventListener('click', function() {
                    alert('پخش پیام صوتی (شبیه‌سازی)');
                });
            }
            
            chatMessages.appendChild(messageDiv);
            
            // اسکرول به پایین
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function toggleVoiceRecording() {
            if (!isRecording) {
                // شروع ضبط
                startRecording();
                sendVoiceBtn.innerHTML = '<i class="fas fa-stop"></i>';
                sendVoiceBtn.style.color = 'var(--accent-color)';
                isRecording = true;
            } else {
                // توقف ضبط
                stopRecording();
                sendVoiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                sendVoiceBtn.style.color = '';
                isRecording = false;
            }
        }

        function startRecording() {
            audioChunks = [];
            
            // در مرورگرهای واقعی از این کد استفاده می‌شود
            if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
                navigator.mediaDevices.getUserMedia({ audio: true })
                    .then(stream => {
                        mediaRecorder = new MediaRecorder(stream);
                        mediaRecorder.ondataavailable = (e) => {
                            audioChunks.push(e.data);
                        };
                        mediaRecorder.onstop = () => {
                            // شبیه‌سازی ارسال صوت
                            addMessage('sent', '', 'voice', 'پیام صوتی');
                            saveMessage(userPhoneNumber, 'پیام صوتی ارسال شد', 'user', 'voice');
                            
                            // پاسخ ربات
                            setTimeout(() => {
                                addMessage('received', 'پیام صوتی شما دریافت شد. ممنون.');
                                saveMessage(userPhoneNumber, 'پیام صوتی شما دریافت شد. ممنون.', 'bot');
                            }, 1000);
                        };
                        mediaRecorder.start();
                    })
                    .catch(err => {
                        console.error('خطا در دسترسی به میکروفون:', err);
                        // شبیه‌سازی ضبط صدا در صورت عدم دسترسی
                        setTimeout(() => {
                            addMessage('sent', '', 'voice', 'پیام صوتی');
                            saveMessage(userPhoneNumber, 'پیام صوتی ارسال شد', 'user', 'voice');
                            
                            setTimeout(() => {
                                addMessage('received', 'پیام صوتی شما دریافت شد. ممنون.');
                                saveMessage(userPhoneNumber, 'پیام صوتی شما دریافت شد. ممنون.', 'bot');
                            }, 1000);
                        }, 2000);
                    });
            } else {
                // شبیه‌سازی برای مرورگرهایی که از MediaRecorder پشتیبانی نمی‌کنند
                setTimeout(() => {
                    addMessage('sent', '', 'voice', 'پیام صوتی');
                    saveMessage(userPhoneNumber, 'پیام صوتی ارسال شد', 'user', 'voice');
                    
                    setTimeout(() => {
                        addMessage('received', 'پیام صوتی شما دریافت شد. ممنون.');
                        saveMessage(userPhoneNumber, 'پیام صوتی شما دریافت شد. ممنون.', 'bot');
                    }, 1000);
                }, 2000);
            }
        }

        function stopRecording() {
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                mediaRecorder.stop();
                mediaRecorder.stream.getTracks().forEach(track => track.stop());
            }
        }

        function startCall(type) {
            callTitle.textContent = `شروع تماس ${type}`;
            callerInfo.textContent = 'در حال برقراری ارتباط با پشتیبانی...';
            
            if (type === 'تصویری') {
                videoPreview.style.display = 'flex';
            } else {
                videoPreview.style.display = 'none';
            }
            
            callModal.style.display = 'flex';
            
            // شبیه‌سازی تماس
            setTimeout(() => {
                callTitle.textContent = `تماس ${type} دریافتی`;
                callerInfo.textContent = 'پشتیبانی لیسه خاتم النبیین';
            }, 1500);
        }

        function saveMessage(phone, message, sender, type = 'text') {
            const messages = JSON.parse(localStorage.getItem('chatMessages') || '{}');
            if (!messages[phone]) {
                messages[phone] = [];
            }
            messages[phone].push({
                text: message,
                sender: sender,
                type: type,
                timestamp: new Date().toISOString()
            });
            localStorage.setItem('chatMessages', JSON.stringify(messages));
        }

        function getBotResponse(userMessage) {
            const lowerMessage = userMessage.toLowerCase();
            
            if (lowerMessage.includes('سلام') || lowerMessage.includes('درود')) {
                return 'سلام! چطور می‌توانم کمک‌تان کنم؟';
            } else if (lowerMessage.includes('ساعت کاری') || lowerMessage.includes('ساعت کار')) {
                return 'ساعات کاری ما از ۸:۰۰ صبح تا ۴:۰۰ عصر می‌باشد.';
            } else if (lowerMessage.includes('تماس') || lowerMessage.includes('تلفن')) {
                return 'شماره تماس ما: ۰۷۸۰-۱۲۳-۴۵۶۷';
            } else if (lowerMessage.includes('آدرس') || lowerMessage.includes('مکان')) {
                return 'آدرس: کابل، افغانستان، حوزه ششم، جوار لوی صارنوالی';
            } else if (lowerMessage.includes('تشکر') || lowerMessage.includes('ممنون')) {
                return 'خوشحالیم که توانسته‌ایم کمک‌تان کنیم!';
            } else {
                return 'پیام شما دریافت شد. همکاران ما در اسرع وقت با شما تماس خواهند گرفت.';
            }
        }

        // دکمه بازگشت به بالا
        const backToTop = document.getElementById('backToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTop.classList.add('show');
            } else {
                backToTop.classList.remove('show');
            }
        });

        backToTop.addEventListener('click', (e) => {
            e.preventDefault();
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // بستن منوی موبایل هنگام کلیک روی لینک
        document.querySelectorAll('nav a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    mainNav.classList.remove('active');
                    mobileMenu.classList.remove('active');
                }
            });
        });

        // بستن ایموجی پیکر هنگام کلیک در جای دیگر
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.emoji-picker') && !e.target.closest('#sendEmojiBtn')) {
                emojiPicker.classList.remove('active');
            }
        });
    </script>
</body>
</html>
