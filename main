        /* Reset و فونت‌ها */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Sahel, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        :root {
            --primary-color: #1a5276;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --light-color: #f8f9fa;
            --dark-color: #2c3e50;
            --success-color: #27ae60;
